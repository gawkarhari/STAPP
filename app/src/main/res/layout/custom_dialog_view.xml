<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_round_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimin_10"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/ib_close"
            android:layout_width="@dimen/margin_45dp"
            android:layout_height="@dimen/margin_45dp"
            android:background="@drawable/ic_close_black_24dp"
            android:layout_gravity="right"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileimage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_person_black_24dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:civ_border_overlay="true"
            />

<!--        <EditText-->
<!--            android:id="@+id/edt_id"-->
<!--            android:inputType="number"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_margin="@dimen/dimin_20"-->
<!--            android:drawableLeft="@drawable/ic_person_black_24dp"-->
<!--            android:drawablePadding="@dimen/dimin_10"-->
<!--            android:hint="Enter Id"-->
<!--            android:textSize="24sp" />-->

        <EditText
            android:id="@+id/edt_fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimin_20"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="@dimen/dimin_10"
            android:hint="Enter First name"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edt_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimin_20"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="@dimen/dimin_10"
            android:hint="Enter last name"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimin_20"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="@dimen/dimin_10"
            android:hint="Enter email(eg.george@gmail.com)"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_adduser"
            android:layout_width="@dimen/margin_200dp"
            android:layout_height="@dimen/margin_45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_40dp"
            android:background="@drawable/btn_bg"
            android:elevation="@dimen/dimin_10"
            android:text="@string/add"
            android:textAllCaps="false"
            android:textSize="@dimen/textsize_30sp"
            android:textColor="@color/white"/>


    </LinearLayout>
</LinearLayout>
